<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ensiasd_groupe_tree" model="ir.ui.view">
        <field name="name">ensiasd.groupe.tree</field>
        <field name="model">ensiasd.groupe</field>
        <field name="arch" type="xml">
            <tree string="Groupes">
                <field name="code"/>
                <field name="name"/>
                <field name="niveau"/>
                <field name="annee_id"/>
                <field name="student_count"/>
                <field name="capacite"/>
            </tree>
        </field>
    </record>

    <record id="view_ensiasd_groupe_form" model="ir.ui.view">
        <field name="name">ensiasd.groupe.form</field>
        <field name="model">ensiasd.groupe</field>
        <field name="arch" type="xml">
            <form string="Groupe">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="niveau"/>
                        </group>
                        <group>
                            <field name="annee_id"/>
                            <field name="capacite"/>
                            <field name="student_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Ã‰tudiants">
                            <field name="student_ids">
                                <tree>
                                    <field name="matricule"/>
                                    <field name="name"/>
                                    <field name="cne"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ensiasd_groupe" model="ir.actions.act_window">
        <field name="name">Groupes</field>
        <field name="res_model">ensiasd.groupe</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
