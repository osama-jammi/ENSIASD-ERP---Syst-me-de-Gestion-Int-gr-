<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
    MENU PRINCIPAL DE L'APPLICATION ÉTUDIANTS
    Ceci crée une icône dans le menu principal d'Odoo (comme Ventes, Achats, etc.)
    -->
    
    <!-- Menu racine de l'application - visible dans le launcher -->
    <menuitem id="menu_ensiasd_student_root"
              name="Étudiants"
              sequence="10"
              web_icon="ensiasd_student,static/description/icon.png"/>

    <!-- Sous-menus -->
    <menuitem id="menu_ensiasd_student_main"
              name="Étudiants"
              parent="menu_ensiasd_student_root"
              sequence="1"/>

    <menuitem id="menu_ensiasd_student_list"
              name="Tous les étudiants"
              parent="menu_ensiasd_student_main"
              action="action_ensiasd_student"
              sequence="1"/>

    <menuitem id="menu_ensiasd_groupe"
              name="Groupes"
              parent="menu_ensiasd_student_main"
              action="action_ensiasd_groupe"
              sequence="2"/>

    <!-- Menu Configuration -->
    <menuitem id="menu_ensiasd_student_config"
              name="Configuration"
              parent="menu_ensiasd_student_root"
              sequence="100"
              groups="ensiasd_core.group_ensiasd_admin"/>
</odoo>
