<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ensiasd_student_tree" model="ir.ui.view">
        <field name="name">ensiasd.student.tree</field>
        <field name="model">ensiasd.student</field>
        <field name="arch" type="xml">
            <tree string="Étudiants">
                <field name="matricule"/>
                <field name="name"/>
                <field name="cne"/>
                <field name="filiere_id"/>
                <field name="email"/>
                <field name="groupe_id"/>
                <field name="niveau"/>
                <field name="inscription_count"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_ensiasd_student_form" model="ir.ui.view">
        <field name="name">ensiasd.student.form</field>
        <field name="model">ensiasd.student</field>
        <field name="arch" type="xml">
            <form string="Étudiant">
                <header>
                    <button name="action_inscrire" string="Inscrire" type="object"
                            class="btn-primary" invisible="state != 'draft'"
                            help="Inscrire l'étudiant et l'ajouter automatiquement aux modules de 1ère année"/>
                    <button name="action_activer" string="Activer" type="object"
                            class="btn-success" invisible="state != 'inscrit'"/>
                    <button name="action_suspendre" string="Suspendre" type="object"
                            class="btn-warning" invisible="state not in ['actif', 'inscrit']"/>
                    <button name="action_diplomer" string="Diplômer" type="object"
                            invisible="state != 'actif' or niveau != '3'"
                            help="Marquer l'étudiant comme diplômé"/>
                    <button name="action_inscribe_next_year" string="Réinscrire année suivante"
                            type="object" class="btn-secondary" icon="fa-level-up"
                            invisible="state != 'actif' or niveau == '3'"
                            confirm="Êtes-vous sûr de vouloir réinscrire cet étudiant à l'année supérieure ?"
                            help="Passer l'étudiant au niveau supérieur et l'inscrire aux modules correspondants"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>

                    <!-- Button Box -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_inscriptions" type="object"
                                class="oe_stat_button" icon="fa-book">
                            <field name="inscription_count" string="Inscriptions" widget="statinfo"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1><field name="name" placeholder="Nom complet"/></h1>
                        <h3><field name="matricule"/></h3>
                    </div>

                    <!-- Alertes -->
                    <div class="alert alert-warning" role="alert" invisible="annee_courante_id">
                        <strong>Attention!</strong> L'année académique courante n'est pas définie.
                        Veuillez la définir avant d'inscrire l'étudiant.
                    </div>

                    <div class="alert alert-info" role="alert" invisible="state != 'draft' or not filiere_id">
                        <strong>Info:</strong> Lors de l'inscription, l'étudiant sera automatiquement
                        inscrit aux modules obligatoires de 1ère année de la filière
                        <field name="filiere_id" readonly="1" class="oe_inline"/>.
                    </div>

                    <group>
                        <group string="Identifiants">
                            <field name="cne"/>
                            <field name="cin"/>
                            <field name="email"/>
                            <field name="partner_id" readonly="1" groups="base.group_no_one"/>
                        </group>
                        <group string="Affectation">
                            <field name="filiere_id" options="{'no_create': True}"
                                   readonly="state != 'draft'"/>
                            <field name="groupe_id"/>
                            <field name="niveau"/>
                            <field name="annee_inscription"/>
                            <field name="annee_courante_id"
                                   required="state in ['inscrit', 'actif']"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Informations personnelles">
                            <group>
                                <group>
                                    <field name="sexe"/>
                                    <field name="date_naissance"/>
                                    <field name="lieu_naissance"/>
                                    <field name="nationalite"/>
                                </group>
                                <group>
                                    <field name="phone"/>
                                    <field name="mobile"/>
                                    <field name="address"/>
                                    <field name="city"/>
                                </group>
                            </group>
                        </page>

                        <page string="Inscriptions aux modules" name="inscriptions">
                            <div class="alert alert-info" role="alert"
                                 invisible="inscription_count > 0">
                                <p><strong>Aucune inscription</strong></p>
                                <p>Cliquez sur "Inscrire" pour inscrire automatiquement l'étudiant
                                aux modules de 1ère année.</p>
                            </div>
                            <field name="inscription_ids">
                                <tree>
                                    <field name="module_id"/>
                                    <field name="semestre"/>
                                    <field name="annee_id"/>
                                    <field name="date_inscription"/>
                                    <field name="note_count"/>
                                    <field name="moyenne_module"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Contact d'urgence">
                            <group>
                                <field name="contact_urgence_nom"/>
                                <field name="contact_urgence_tel"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_ensiasd_student_kanban" model="ir.ui.view">
        <field name="name">ensiasd.student.kanban</field>
        <field name="model">ensiasd.student</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="image"/>
                <field name="matricule"/>
                <field name="filiere_id"/>
                <field name="groupe_id"/>
                <field name="state"/>
                <field name="niveau"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('ensiasd.student', 'image', record.id.raw_value)" alt="Photo"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <div><field name="matricule"/></div>
                                <div><field name="filiere_id"/></div>
                                <div>
                                    <span class="badge badge-pill">Niveau <field name="niveau"/></span>
                                    <field name="state" widget="label_selection"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_ensiasd_student_search" model="ir.ui.view">
        <field name="name">ensiasd.student.search</field>
        <field name="model">ensiasd.student</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="cne"/>
                <field name="matricule"/>
                <field name="filiere_id"/>
                <separator/>
                <filter string="Actifs" name="actif" domain="[('state', '=', 'actif')]"/>
                <filter string="Inscrits" name="inscrit" domain="[('state', '=', 'inscrit')]"/>
                <filter string="Brouillons" name="draft" domain="[('state', '=', 'draft')]"/>
                <separator/>
                <filter string="1ère année" name="niveau_1" domain="[('niveau', '=', '1')]"/>
                <filter string="2ème année" name="niveau_2" domain="[('niveau', '=', '2')]"/>
                <filter string="3ème année" name="niveau_3" domain="[('niveau', '=', '3')]"/>
                <separator/>
                <group expand="0" string="Grouper par">
                    <filter string="Filière" name="group_filiere" context="{'group_by': 'filiere_id'}"/>
                    <filter string="Groupe" name="group_groupe" context="{'group_by': 'groupe_id'}"/>
                    <filter string="Niveau" name="group_niveau" context="{'group_by': 'niveau'}"/>
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_ensiasd_student" model="ir.actions.act_window">
        <field name="name">Étudiants</field>
        <field name="res_model">ensiasd.student</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_actif': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Ajouter un nouvel étudiant
            </p>
            <p>
                Lors de l'inscription, l'étudiant sera automatiquement inscrit
                aux modules obligatoires de 1ère année de sa filière.
            </p>
            <p>
                <strong>Important:</strong> Assurez-vous que l'année académique courante
                est bien configurée dans Configuration → Année universitaire.
            </p>
        </field>
    </record>
</odoo>