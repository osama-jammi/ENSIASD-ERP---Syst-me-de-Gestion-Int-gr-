<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ensiasd_config_form" model="ir.ui.view">
        <field name="name">ensiasd.config.form</field>
        <field name="model">ensiasd.config</field>
        <field name="arch" type="xml">
            <form string="Configuration ENSIASD">
                <sheet>
                    <group>
                        <group string="Établissement">
                            <field name="name"/>
                            <field name="full_name"/>
                            <field name="city"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="website" widget="url"/>
                        </group>
                        <group string="Logo">
                            <field name="logo" widget="image" class="oe_avatar"/>
                        </group>
                    </group>
                    <group string="Paramètres de notation">
                        <group>
                            <field name="note_max"/>
                            <field name="note_validation"/>
                            <field name="note_elimination"/>
                        </group>
                        <group>
                            <field name="annee_courante_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ensiasd_config" model="ir.actions.act_window">
        <field name="name">Configuration ENSIASD</field>
        <field name="res_model">ensiasd.config</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>
</odoo>
