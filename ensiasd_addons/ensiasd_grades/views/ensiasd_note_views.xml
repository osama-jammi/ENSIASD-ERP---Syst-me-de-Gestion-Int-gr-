<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ensiasd_note_tree" model="ir.ui.view">
        <field name="name">ensiasd.note.tree</field>
        <field name="model">ensiasd.note</field>
        <field name="arch" type="xml">
            <tree string="Notes" editable="bottom">
                <field name="student_id"/>
                <field name="module_id"/>
                <field name="type_eval"/>
                <field name="valeur"/>
                <field name="coefficient"/>
                <field name="date_eval"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_ensiasd_note_form" model="ir.ui.view">
        <field name="name">ensiasd.note.form</field>
        <field name="model">ensiasd.note</field>
        <field name="arch" type="xml">
            <form string="Note">
                <header>
                    <button name="action_confirm" string="Confirmer" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_validate" string="Valider" type="object" class="btn-success" invisible="state != 'confirmed'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="inscription_id"/>
                            <field name="student_id" readonly="1"/>
                            <field name="module_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="type_eval"/>
                            <field name="valeur"/>
                            <field name="coefficient"/>
                            <field name="date_eval"/>
                        </group>
                    </group>
                    <field name="observations"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ensiasd_note" model="ir.actions.act_window">
        <field name="name">Notes</field>
        <field name="res_model">ensiasd.note</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
