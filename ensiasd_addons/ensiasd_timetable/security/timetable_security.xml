<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Groupes de sécurité -->
    <record id="group_timetable_user" model="res.groups">
        <field name="name">Emploi du temps: Utilisateur</field>
        <field name="category_id" ref="ensiasd_core.module_category_ensiasd"/>
    </record>

    <record id="group_timetable_manager" model="res.groups">
        <field name="name">Emploi du temps: Responsable</field>
        <field name="category_id" ref="ensiasd_core.module_category_ensiasd"/>
        <field name="implied_ids" eval="[
            (4, ref('group_timetable_user')),
            (4, ref('ensiasd_core.group_ensiasd_admin')),
        ]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <!-- Règles d'accès -->
    <record id="rule_emploi_global_read" model="ir.rule">
        <field name="name">Emploi: Lecture globale</field>
        <field name="model_id" ref="model_ensiasd_emploi"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="rule_creneau_global_read" model="ir.rule">
        <field name="name">Creneau: Lecture globale</field>
        <field name="model_id" ref="model_ensiasd_creneau"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>