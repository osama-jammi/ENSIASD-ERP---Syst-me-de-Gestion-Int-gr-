<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron pour générer les séances automatiquement chaque semaine -->
        <record id="cron_generate_weekly_seances" model="ir.cron">
            <field name="name">Génération automatique des séances hebdomadaires</field>
            <field name="model_id" ref="model_ensiasd_emploi"/>
            <field name="state">code</field>
            <field name="code">model.cron_generate_weekly_seances()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="False"/>
        </record>
        
        <!-- Cron pour envoyer les rappels de séances -->
        <record id="cron_send_seance_reminders" model="ir.cron">
            <field name="name">Rappel des séances du jour</field>
            <field name="model_id" ref="ensiasd_academic.model_ensiasd_seance"/>
            <field name="state">code</field>
            <field name="code">model.cron_send_daily_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="False"/>
        </record>
    </data>
</odoo>
