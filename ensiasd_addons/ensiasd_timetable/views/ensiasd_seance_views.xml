<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ensiasd_seance_tree" model="ir.ui.view">
        <field name="name">ensiasd.seance.tree</field>
        <field name="model">ensiasd.seance</field>
        <field name="arch" type="xml">
            <tree string="Séances">
                <field name="date"/>
                <field name="heure_debut" widget="float_time"/>
                <field name="heure_fin" widget="float_time"/>
                <field name="element_id"/>
                <field name="salle_id"/>
                <field name="enseignant_id"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_ensiasd_seance_form" model="ir.ui.view">
        <field name="name">ensiasd.seance.form</field>
        <field name="model">ensiasd.seance</field>
        <field name="arch" type="xml">
            <form string="Séance">
                <header>
                    <button name="action_done" string="Effectuée" type="object"
                            class="btn-success" invisible="state != 'planned'"/>
                    <button name="action_cancel" string="Annuler" type="object"
                            invisible="state != 'planned'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="element_id"/>
                            <field name="enseignant_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="heure_debut" widget="float_time"/>
                            <field name="heure_fin" widget="float_time"/>
                            <field name="salle_id"/>
                        </group>
                    </group>
                    <group string="Emploi du temps" invisible="not emploi_id">
                        <field name="emploi_id" readonly="1"/>
                        <field name="is_generated" readonly="1"/>
                    </group>
                    <group string="Groupes">
                        <field name="groupe_ids" widget="many2many_tags" nolabel="1"/>
                    </group>
                    <field name="notes"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_ensiasd_seance_calendar" model="ir.ui.view">
        <field name="name">ensiasd.seance.calendar</field>
        <field name="model">ensiasd.seance</field>
        <field name="arch" type="xml">
            <calendar string="Planning" date_start="date" color="type_seance" mode="week">
                <field name="element_id"/>
                <field name="salle_id"/>
            </calendar>
        </field>
    </record>

    <record id="view_ensiasd_seance_search" model="ir.ui.view">
        <field name="name">ensiasd.seance.search</field>
        <field name="model">ensiasd.seance</field>
        <field name="arch" type="xml">
            <search>
                <field name="element_id"/>
                <field name="enseignant_id"/>
                <field name="salle_id"/>
                <field name="date"/>
                <separator/>
                <filter name="filter_planned" string="Planifiées" domain="[('state', '=', 'planned')]"/>
                <filter name="filter_done" string="Effectuées" domain="[('state', '=', 'done')]"/>
                <filter name="filter_today" string="Aujourd'hui"
                        domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <separator/>
                <group expand="0" string="Grouper par">
                    <filter name="group_date" string="Date" context="{'group_by': 'date'}"/>
                    <filter name="group_element" string="Élément" context="{'group_by': 'element_id'}"/>
                    <filter name="group_enseignant" string="Enseignant" context="{'group_by': 'enseignant_id'}"/>
                    <filter name="group_salle" string="Salle" context="{'group_by': 'salle_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_ensiasd_seance" model="ir.actions.act_window">
        <field name="name">Séances</field>
        <field name="res_model">ensiasd.seance</field>
        <field name="view_mode">tree,calendar,form</field>
        <field name="context">{'search_default_filter_planned': 1}</field>
    </record>

    <record id="action_ensiasd_seance_calendar" model="ir.actions.act_window">
        <field name="name">Planning des séances</field>
        <field name="res_model">ensiasd.seance</field>
        <field name="view_mode">calendar,tree,form</field>
        <field name="context">{'search_default_filter_planned': 1}</field>
    </record>
</odoo>