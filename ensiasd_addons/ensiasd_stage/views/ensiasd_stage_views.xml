<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ensiasd_stage_tree" model="ir.ui.view">
        <field name="name">ensiasd.stage.tree</field>
        <field name="model">ensiasd.stage</field>
        <field name="arch" type="xml">
            <tree string="Stages">
                <field name="name"/>
                <field name="student_id"/>
                <field name="sujet"/>
                <field name="entreprise_id"/>
                <field name="type_stage"/>
                <field name="date_debut"/>
                <field name="encadrant_interne_id"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_ensiasd_stage_form" model="ir.ui.view">
        <field name="name">ensiasd.stage.form</field>
        <field name="model">ensiasd.stage</field>
        <field name="arch" type="xml">
            <form string="Stage">
                <header>
                    <button name="action_submit" string="Soumettre" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approuver" type="object" class="btn-success" invisible="state != 'submitted'"/>
                    <button name="action_start" string="DÃ©marrer" type="object" invisible="state != 'approved'"/>
                    <button name="action_defense" string="Soutenance" type="object" invisible="state != 'in_progress'"/>
                    <button name="action_done" string="Terminer" type="object" class="btn-success" invisible="state != 'defense'"/>
                    <button name="action_cancel" string="Annuler" type="object" invisible="state in ['done', 'cancelled']"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                        <h2><field name="sujet"/></h2>
                    </div>
                    <group>
                        <group>
                            <field name="student_id"/>
                            <field name="type_stage"/>
                            <field name="annee_id"/>
                        </group>
                        <group>
                            <field name="entreprise_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Dates">
                            <field name="date_debut"/>
                            <field name="date_fin"/>
                            <field name="duree"/>
                        </group>
                        <group string="Encadrement">
                            <field name="encadrant_interne_id"/>
                            <field name="encadrant_externe"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Soutenance" invisible="state not in ['defense', 'done']">
                            <group>
                                <group>
                                    <field name="date_soutenance"/>
                                </group>
                                <group>
                                    <field name="note_finale"/>
                                    <field name="mention"/>
                                </group>
                            </group>
                        </page>
                        <page string="Documents">
                            <field name="rapport" filename="rapport_filename"/>
                            <field name="rapport_filename" invisible="1"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_ensiasd_stage" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">ensiasd.stage</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
