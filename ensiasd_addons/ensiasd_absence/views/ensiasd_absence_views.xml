<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ensiasd_absence_tree" model="ir.ui.view">
        <field name="name">ensiasd.absence.tree</field>
        <field name="model">ensiasd.absence</field>
        <field name="arch" type="xml">
            <tree string="Absences" decoration-danger="state=='absent'">
                <field name="date"/>
                <field name="student_id"/>
                <field name="seance_id"/>
                <field name="module_id"/>
                <field name="justifiee"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_ensiasd_absence_form" model="ir.ui.view">
        <field name="name">ensiasd.absence.form</field>
        <field name="model">ensiasd.absence</field>
        <field name="arch" type="xml">
            <form string="Absence">
                <header>
                    <button name="action_justify" string="Justifier" type="object" invisible="state != 'absent'"/>
                    <button name="action_excuse" string="Excuser" type="object" invisible="state == 'excused'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="student_id"/>
                            <field name="seance_id"/>
                            <field name="date" readonly="1"/>
                        </group>
                        <group>
                            <field name="justifiee"/>
                            <field name="justificatif" filename="justificatif_filename"/>
                            <field name="justificatif_filename" invisible="1"/>
                        </group>
                    </group>
                    <field name="motif"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ensiasd_absence" model="ir.actions.act_window">
        <field name="name">Absences</field>
        <field name="res_model">ensiasd.absence</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
