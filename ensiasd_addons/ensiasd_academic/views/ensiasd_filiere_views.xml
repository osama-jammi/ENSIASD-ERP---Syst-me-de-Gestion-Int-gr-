<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ensiasd_filiere_tree" model="ir.ui.view">
        <field name="name">ensiasd.filiere.tree</field>
        <field name="model">ensiasd.filiere</field>
        <field name="arch" type="xml">
            <tree string="Filières">
                <field name="code"/>
                <field name="name"/>
                <field name="niveau"/>
                <field name="responsable_id"/>
                <field name="module_count"/>
            </tree>
        </field>
    </record>

    <record id="view_ensiasd_filiere_form" model="ir.ui.view">
        <field name="name">ensiasd.filiere.form</field>
        <field name="model">ensiasd.filiere</field>
        <field name="arch" type="xml">
            <form string="Filière">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="niveau"/>
                            <field name="duree"/>
                        </group>
                        <group>
                            <field name="responsable_id"/>
                            <field name="module_count"/>
                        </group>
                    </group>
                    <field name="description"/>
                    <notebook>
                        <page string="Modules">
                            <field name="module_ids">
                                <tree>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="semestre"/>
                                    <field name="credits_ects"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_ensiasd_filiere" model="ir.actions.act_window">
        <field name="name">Filières</field>
        <field name="res_model">ensiasd.filiere</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
