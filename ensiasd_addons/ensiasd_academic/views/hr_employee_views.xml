<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire simplifiée pour les enseignants -->
    <record id="view_hr_employee_enseignant_form" model="ir.ui.view">
        <field name="name">hr.employee.enseignant.form</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <form string="Enseignant">
                <header>
                    <!-- Boutons de workflow -->
                    <button name="action_confirm" string="Confirmer" type="object"
                            class="btn-primary" invisible="state != 'draft'"
                            help="Confirmer l'enseignant et valider ses informations"/>
                    <button name="action_activate" string="Activer" type="object"
                            class="btn-success" invisible="state != 'confirmed'"
                            help="Activer l'enseignant dans le système"/>
                    <button name="action_deactivate" string="Désactiver" type="object"
                            class="btn-warning" invisible="state not in ['active', 'confirmed']"
                            confirm="Êtes-vous sûr de vouloir désactiver cet enseignant ?"/>
                    <button name="action_set_to_draft" string="Remettre en brouillon" type="object"
                            class="btn-secondary" invisible="state not in ['confirmed', 'inactive']"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,active"/>
                </header>
                <sheet>
                    <field name="company_id" invisible="1"/>
                    <field name="is_enseignant" invisible="1"/>
                    <field name="image_1920" widget="image" class="oe_avatar"/>

                    <!-- Button Box -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_filieres" type="object"
                                class="oe_stat_button" icon="fa-graduation-cap"
                                invisible="filiere_count == 0">
                            <field name="filiere_count" string="Filières" widget="statinfo"/>
                        </button>
                        <button name="action_view_modules" type="object"
                                class="oe_stat_button" icon="fa-book"
                                invisible="module_count == 0">
                            <field name="module_count" string="Modules" widget="statinfo"/>
                        </button>
                        <button name="action_view_elements" type="object"
                                class="oe_stat_button" icon="fa-list"
                                invisible="element_count == 0">
                            <field name="element_count" string="Éléments" widget="statinfo"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom de l'enseignant" required="1"/>
                        </h1>
                        <h3>
                            <field name="matricule_enseignant" placeholder="Matricule"
                                   readonly="state != 'draft'"/>
                        </h3>
                    </div>

                    <!-- Alertes -->
                    <div class="alert alert-warning" role="alert"
                         invisible="state != 'draft' or matricule_enseignant">
                        <strong>Attention!</strong> Le matricule enseignant est obligatoire pour confirmer.
                    </div>

                    <div class="alert alert-info" role="alert" invisible="state != 'draft'">
                        <strong>Info:</strong> Une fois confirmé, l'enseignant pourra être affecté
                        aux filières et modules.
                    </div>

                    <group>
                        <group string="Informations Personnelles">
                            <field name="work_email" widget="email"
                                   readonly="state not in ['draft', 'confirmed']"/>
                            <field name="work_phone" widget="phone"
                                   readonly="state not in ['draft', 'confirmed']"/>
                            <field name="mobile_phone" widget="phone"
                                   readonly="state not in ['draft', 'confirmed']"/>
                            <field name="department_id"
                                   readonly="state not in ['draft', 'confirmed']"/>
                            <field name="job_id"
                                   readonly="state not in ['draft', 'confirmed']"/>
                        </group>
                        <group string="Informations Enseignant">
                            <field name="grade" placeholder="Ex: Professeur, Docteur..."
                                   readonly="state not in ['draft', 'confirmed']"/>
                            <field name="specialite" placeholder="Ex: Intelligence Artificielle"
                                   readonly="state not in ['draft', 'confirmed']"/>
                            <field name="date_recrutement"
                                   readonly="state not in ['draft', 'confirmed']"/>
                            <field name="bureau" placeholder="Ex: Bâtiment A, Bureau 201"
                                   readonly="state not in ['draft', 'confirmed']"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Affectations Académiques" name="academic">
                            <group>
                                <field name="filiere_ids" widget="many2many_tags"
                                       placeholder="Sélectionnez les filières"
                                       readonly="state == 'draft'"/>
                            </group>
                            <group string="Modules enseignés (automatique)">
                                <field name="module_ids" readonly="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="semestre"/>
                                    </tree>
                                </field>
                            </group>
                            <group string="Éléments de module">
                                <field name="element_ids" readonly="state == 'draft'">
                                    <tree>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="type_element"/>
                                        <field name="volume_horaire"/>
                                        <field name="module_id"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Informations Complémentaires" name="other">
                            <group>
                                <group string="Notes">
                                    <field name="notes" placeholder="Notes supplémentaires..."/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <!-- CHATTER COMMENTÉ - Décommentez si vous ajoutez les droits HR -->
                <!--
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
                -->
            </form>
        </field>
    </record>

    <!-- Vue liste pour les enseignants -->
    <record id="view_hr_employee_enseignant_tree" model="ir.ui.view">
        <field name="name">hr.employee.enseignant.tree</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <tree string="Enseignants" create="1" decoration-muted="state == 'inactive'"
                  decoration-info="state == 'draft'" decoration-success="state == 'active'">
                <field name="name"/>
                <field name="matricule_enseignant"/>
                <field name="grade"/>
                <field name="specialite"/>
                <field name="work_email"/>
                <field name="work_phone"/>
                <field name="filiere_ids" widget="many2many_tags"/>
                <field name="department_id"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'active'"
                       decoration-info="state == 'confirmed'"
                       decoration-warning="state == 'draft'"
                       decoration-danger="state == 'inactive'"/>
            </tree>
        </field>
    </record>

    <!-- Vue kanban pour les enseignants -->
    <record id="view_hr_employee_enseignant_kanban" model="ir.ui.view">
        <field name="name">hr.employee.enseignant.kanban</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <kanban create="1" class="o_kanban_mobile">
                <field name="id"/>
                <field name="name"/>
                <field name="image_128"/>
                <field name="matricule_enseignant"/>
                <field name="grade"/>
                <field name="specialite"/>
                <field name="work_email"/>
                <field name="work_phone"/>
                <field name="state"/>
                <field name="filiere_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('hr.employee', 'image_128', record.id.raw_value)" alt="Enseignant"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <ul>
                                    <li t-if="record.matricule_enseignant.value">
                                        <i class="fa fa-id-card-o" title="Matricule"/>
                                        <field name="matricule_enseignant"/>
                                    </li>
                                    <li t-if="record.grade.value">
                                        <i class="fa fa-graduation-cap" title="Grade"/>
                                        <field name="grade"/>
                                    </li>
                                    <li t-if="record.specialite.value">
                                        <i class="fa fa-book" title="Spécialité"/>
                                        <field name="specialite"/>
                                    </li>
                                    <li t-if="record.work_email.value">
                                        <i class="fa fa-envelope-o" title="Email"/>
                                        <field name="work_email"/>
                                    </li>
                                    <li t-if="record.work_phone.value">
                                        <i class="fa fa-phone" title="Téléphone"/>
                                        <field name="work_phone"/>
                                    </li>
                                </ul>
                                <div class="oe_kanban_footer">
                                    <div class="float-start">
                                        <field name="filiere_ids" widget="many2many_tags"/>
                                    </div>
                                    <div class="float-end">
                                        <field name="state" widget="label_selection"
                                               options="{'classes': {'draft': 'secondary', 'confirmed': 'info', 'active': 'success', 'inactive': 'danger'}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Filtre de recherche amélioré -->
    <record id="view_hr_employee_enseignant_search" model="ir.ui.view">
        <field name="name">hr.employee.enseignant.search</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <search string="Rechercher Enseignants">
                <field name="name" string="Nom"/>
                <field name="matricule_enseignant" string="Matricule"/>
                <field name="grade" string="Grade"/>
                <field name="specialite" string="Spécialité"/>
                <field name="department_id" string="Département"/>
                <field name="filiere_ids" string="Filière"/>
                <separator/>
                <filter string="Actifs" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Confirmés" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Brouillons" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Inactifs" name="inactive" domain="[('state', '=', 'inactive')]"/>
                <separator/>
                <filter string="Professeurs" name="professeurs"
                        domain="[('grade', 'ilike', 'professeur')]"/>
                <filter string="Docteurs" name="docteurs"
                        domain="[('grade', 'ilike', 'docteur')]"/>
                <separator/>
                <filter string="Avec Email" name="with_email"
                        domain="[('work_email', '!=', False)]"/>
                <filter string="Avec Téléphone" name="with_phone"
                        domain="[('work_phone', '!=', False)]"/>
                <separator/>
                <group expand="0" string="Grouper par">
                    <filter string="État" name="group_state"
                            context="{'group_by': 'state'}"/>
                    <filter string="Grade" name="group_grade"
                            context="{'group_by': 'grade'}"/>
                    <filter string="Spécialité" name="group_specialite"
                            context="{'group_by': 'specialite'}"/>
                    <filter string="Département" name="group_department"
                            context="{'group_by': 'department_id'}"/>
                    <filter string="Filière" name="group_filiere"
                            context="{'group_by': 'filiere_ids'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action principale pour gérer les enseignants -->
    <record id="action_enseignants" model="ir.actions.act_window">
        <field name="name">Enseignants</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_enseignant', '=', True)]</field>
        <field name="context">{
            'default_is_enseignant': True,
            'search_default_active': 1,
            'create': True
        }</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_hr_employee_enseignant_kanban')}),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_hr_employee_enseignant_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_hr_employee_enseignant_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Ajouter un nouvel enseignant
            </p>
            <p>
                Cliquez sur "Créer" pour ajouter un nouvel enseignant à ENSIASD.
            </p>
            <p>
                <strong>Étapes:</strong>
            </p>
            <ol>
                <li>Créer l'enseignant et remplir ses informations</li>
                <li>Cliquer sur "Confirmer" pour valider</li>
                <li>Cliquer sur "Activer" pour activer l'enseignant</li>
                <li>Affecter l'enseignant aux filières et éléments</li>
            </ol>
        </field>
    </record>
</odoo>