<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ensiasd_inscription_tree" model="ir.ui.view">
        <field name="name">ensiasd.inscription.tree</field>
        <field name="model">ensiasd.inscription</field>
        <field name="arch" type="xml">
            <tree string="Inscriptions">
                <field name="student_id"/>
                <field name="module_id"/>
                <field name="annee_id"/>
                <field name="date_inscription"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_ensiasd_inscription_form" model="ir.ui.view">
        <field name="name">ensiasd.inscription.form</field>
        <field name="model">ensiasd.inscription</field>
        <field name="arch" type="xml">
            <form string="Inscription">
                <header>
                    <button name="action_confirm" string="Confirmer" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_validate" string="Valider" type="object" class="btn-success" invisible="state != 'confirmed'"/>
                    <button name="action_cancel" string="Annuler" type="object" invisible="state in ['cancelled', 'validated']"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="student_id"/>
                            <field name="module_id"/>
                        </group>
                        <group>
                            <field name="annee_id"/>
                            <field name="date_inscription"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_ensiasd_inscription" model="ir.actions.act_window">
        <field name="name">Inscriptions</field>
        <field name="res_model">ensiasd.inscription</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
